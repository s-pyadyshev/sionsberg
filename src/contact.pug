extends pug/base

prepend vars
  - title = 'Contact'

append vars
  - html.classList.push('brand-1-theme')

block content
  .page-body.page-body--image-left
    .page-content
      .page-header.page-header--image-left.background-none
        img.page-header__image(src="images/contact.jpg" alt="zorgaanbod." width="720" height="320")
      section.section-contact.background-default
        h1 Contact
        .contact
          .contact__top
            article.article 
              p Heeft u een vraag of wilt u iets doorgeven? Wij helpen u graag. Hier vindt u onze contactgegevens, openingstijden en een contactformulier.

