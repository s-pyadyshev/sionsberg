            h3 Contactformulier
            form(action="", method="post").form
              .control
                input.input(type="text", name="name", placeholder="Voornaam" required)
              .control
                input.input(type="text", name="surname", placeholder="Achternaam" required)
              .control
                input.input(type="email", name="email", placeholder="E-mailadres")
              .control
                input.input(type="tel", name="tel", placeholder="Telefoonnummer" required)
              .control
